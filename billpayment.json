{
  "openapi": "3.0.3",
  "info": {
    "title": "Bill Payment RESTful API",
    "version": "1",
    "description": "OpenAPI for Bill Payment RESTful API",
    "termsOfService": "https://www.yeahbutsill.com/payment",
    "contact": {
      "name": "Dani Setiawan",
      "url": "https://www.yeahbutsill.com",
      "email": "dani.setiawan@ist.id"
    },
    "license": {
      "name": "APACHE 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0"
    }
  },
  "servers": [
    {
      "url": "https://{environment}.yeahbutstill.com/api/v1",
      "description": "Bill Payment RESTful API Server",
      "variables": {
        "environment": {
          "default": "dev",
          "description": "Server Environment",
          "enum": [
            "dev",
            "qa",
            "prod"
          ]
        }
      }
    }
  ],
  "externalDocs": {
    "description": "Github Yeah But Still",
    "url": "https://github.com/yeahbutstill"
  },
  "paths": {
    "/payment": {
      "get": {
        "summary": "Get All Payment",
        "description": "Only will return acative payment, complete payment or delete payment will be remove",
        "parameters": [
          {
            "name": "include_done",
            "in": "query",
            "required": false,
            "description": "Is include done payment",
            "schema": {
              "type": "boolean",
              "nullable": true,
              "default": false
            }
          },
          {
            "name": "va_customer",
            "in": "query",
            "required": false,
            "description": "Filter payment by VA customer",
            "schema": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            }
          }
        ],
        "responses": {}
      },
      "post": {
        "summary": "Create new Payment",
        "description": "Create new active payment",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "customer" : {
                    "type": "string",
                    "minLength": 1,
                    "required": true
                  },
                  "priority": {
                    "type": "integer",
                    "format": "int32",
                    "required": true,
                    "default": 1
                  },
                  "tags": {
                    "type": "array",
                    "required": false,
                    "minItems": 1,
                    "items": {
                      "type": "string",
                      "minLength": 1
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {}
      }
    },
    "/payment/{paymentId}": {
      "put": {
        "summary": "Update existing Payment",
        "description": "Update existing payment in database",
        "parameters": [
          {
            "name": "paymentId",
            "in": "path",
            "required": true,
            "description": "Payment id for updated",
            "schema": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "customer" : {
                    "type": "string",
                    "minLength": 1,
                    "required": true
                  },
                  "priority": {
                    "type": "integer",
                    "format": "int32",
                    "required": true,
                    "default": 1
                  },
                  "tags": {
                    "type": "array",
                    "required": false,
                    "minItems": 1,
                    "items": {
                      "type": "string",
                      "minLength": 1
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {}
      },
      "delete": {
        "summary": "Delete existing Payment",
        "description": "Delete existing payment in database",
        "parameters": [
          {
            "name": "paymentId",
            "in": "path",
            "required": true,
            "description": "Payment id for deleted",
            "schema": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            }
          }
        ],
        "responses": {}
      }
    }
  }
}
